<%- include('Layout/header') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <title>
            <%= title %>
        </title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class="container">
            <div class="column">
                <div class="mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header" style="background-color: #20cc94;">
                            <h3 class="text-light">Update Car, <%= car.carMake %>
                                    <%= car.carModel %>
                            </h3>
                        </div>
                        <div class="card-body p-4">
                            <form action="/api/cars/update/<%= car.id %>" method="post" id="add-form"
                                enctype="multipart/form-data">
                                <input type="hidden" name="id" value="<%= car.id %>" />
                                <div class="mb-3">
                                    <label for="carMake">Car Make</label>
                                    <input type="text" class="form-control form-control-lg" id="carMake"
                                        placeholder="Enter Car Make" name="carMake" value="<%= car.carMake %>"
                                        required />
                                </div>
                                <div class="mb-3">
                                    <label for="carModel">Car Model</label>
                                    <input type="text" class="form-control form-control-lg" id="carModel"
                                        placeholder="Enter Last Name" name="carModel" value="<%= car.carModel %>"
                                        required />
                                </div>
                                <div class="mb-3"> <label for="color">Color</label>
                                    <input type="text" name="color" class="form-control form-control-lg" id="color"
                                        placeholder="Enter Color" value="<%= car.color %>" required />
                                </div>
                                <div class="mb-3">
                                    <label for="userId">Owner</label>
                                    <select name="userId" id="userId" class="form-control form-control-lg mb-3"
                                        aria-label=".form-select-lg example" required>
                                        <option selected>Select Owner</option>
                                        <% users.forEach(function(users){ %>
                                            <option value="<%= users.id %>">
                                                <%= users.firstName %>
                                                    <%= users.lastName %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="images" class="form-label">Select Images</label>
                                    <input class="form-control form-control-lg" type="file" name="images" id="images"
                                        required multiple />
                                    <br />
                                    <% images.forEach(image=> { %>
                                        <img src="<%= image.image.substr(21) %>" alt="" width="100" height="70" />
                                        <% }) %>
                                </div>
                                <div class="mb-3 d-grid">
                                    <div class="col text-center">
                                        <input type="submit" name="submit" value="Update" class="btn btn-dark btn-lg"
                                            style="background-color: #20cc94;" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </body>

    </html>
    <%- include('Layout/footer') %>